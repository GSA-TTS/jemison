{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "scheme": { "type": "string", "maxLength": 10 },
    "host": { "type": "string", "maxLength": 500 },
    "path": { "type": "string", "maxLength": 1500 },
    "api-key": { "type": "string" },
    "data": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "source": { "type": "string" },
        "payload": { "type": "string" }
      },
      "required": ["id", "source", "payload"]
    }
  },
  "required": ["scheme", "host", "path", "api-key", "data"]
}