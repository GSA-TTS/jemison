{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "kind": { "type": "string", "enum": ["full", "single"] },
    "hallpass": { "type": "boolean" },
    "scheme": { "type": "string", "maxLength": 10 },
    "host": { "type": "string", "maxLength": 500 },
    "domain64": { "type": "integer" },
    "path": { "type": "string", "maxLength": 1500 },
    "data": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "source": { "type": "string" },
        "payload": { "type": "string" }
      },
      "required": ["id", "source", "payload"]
    }
  },
  "required": ["scheme", "host", "path", "data"]
}